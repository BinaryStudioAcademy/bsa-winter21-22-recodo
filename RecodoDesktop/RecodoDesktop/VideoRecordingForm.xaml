<Window x:Class="Recodo.Desktop.Main.VideoRecordingForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Recodo.Desktop.Main"
        mc:Ignorable="d"
        Title="VideoRecordingForm"
        Left="500"
        Background="{StaticResource MaterialDesignBackground}" SizeToContent="WidthAndHeight" WindowStyle="None">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Button Grid.Column="0" Width="56" Height="56" Style="{StaticResource MaterialDesignFloatingActionAccentButton}" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="35.32,22.92,0,39.15">
            <StackPanel Width="22.04" Height="29.47">
                <Image Source="Icons/r.png" />
            </StackPanel>
        </Button>
        <TextBlock FontSize="28px" FontFamily="Poppins" FontWeight="Medium" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="103.61,35,0,0" Height="42">Recodo</TextBlock>
        <Button Grid.Column="1" Grid.Row="0"  Width="60" Style="{StaticResource MaterialDesignOutlinedDarkButton}" Height="60" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="58.23,19.95,0,0">
            <StackPanel Width="20.33" Height="26.13">
                <Image Source="Icons/bell.png" />
            </StackPanel>
        </Button>
        <Button Grid.Column="1" Grid.Row="0"  Width="60" Style="{StaticResource MaterialDesignFlatButton}" Height="60" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="124,19.95,0,0">
            <StackPanel Width="22.63" Height="24.68">
                <Image Source="Icons/home.png" />
            </StackPanel>
        </Button>
        <Button Grid.Column="1" Grid.Row="0"  Width="60"  Style="{StaticResource MaterialDesignFlatButton}" Height="60" Margin="189.77,19.95,0,0" VerticalAlignment="Top" HorizontalAlignment="Left">
            <StackPanel Width="27" Height="6">
                <Image Source="Icons/menu.png" />
            </StackPanel>
        </Button>
        <Button Grid.Row="1" Grid.Column="0" Style="{StaticResource MaterialDesignRaisedSecondaryLightButton}" Margin="34.62,0,0,11.13">
            <StackPanel Orientation="Horizontal">
                <Image
                    Height="15"
                    Width="24"
                    Source="Icons/camera.png"/>
                <TextBlock
                    Text="Video"
			        Margin="10,4,4,4"
			        VerticalAlignment="Center">
                </TextBlock>
            </StackPanel>
        </Button>
        <Button Grid.Column="1" Grid.Row="1" Style="{StaticResource MaterialDesignToolForegroundButton}" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,0,27.32,0">
            <StackPanel Orientation="Horizontal">
                <Image
                    Height="15"
                    Width="24"
                    Source="Icons/image.png"/>
                <TextBlock
                    Text="Screenshot (Beta)"
			        Margin="10,4,4,4"
			        VerticalAlignment="Center">
                </TextBlock>
            </StackPanel>
        </Button>
        <ComboBox Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Width="400" Height="37.89"  HorizontalAlignment="Stretch" VerticalAlignment="Top" Margin="34.62,0,27.32,0" >Screen and cammera</ComboBox>
        <ComboBox Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" Height="37.89" Margin="34.62,6.58,27.32,10" Width="400" HorizontalAlignment="Stretch" VerticalAlignment="Top">Full screen</ComboBox>
        <Button Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2"  Width="400" Style="{StaticResource MaterialDesignOutlinedDarkButton}" VerticalAlignment="Top" HorizontalAlignment="Stretch" Margin="34.62,0,27.32,29.25" FontWeight="SemiBold">Create a recording canvas</Button>
        <TextBlock Grid.Row="5" Grid.Column="0" Margin="34.62,0,0,5.95" FontSize="14" FontWeight="SemiBold">Recording Settings</TextBlock>
        <Button Grid.Row="6" Grid.Column="0" Width="39" Style="{StaticResource MaterialDesignRaisedSecondaryLightButton}" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="34.62,0,0,7.23" Height="38">
            <Image Height="15" Width="20" Source="Icons/camera.png" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="-10,-5,-10,-5"/>
        </Button>
        <ComboBox Grid.Row="6" Grid.Column="1" Width="354" Height="37.89" Margin="-120,0,27.32,0" HorizontalAlignment="Stretch" VerticalAlignment="Top">Screen and cammera</ComboBox>
        <Button Grid.Row="7" Grid.Column="0" Width="39" Height="38" Style="{StaticResource MaterialDesignRaisedSecondaryLightButton}" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="34.62,0,0,0">
            <Image Height="20" Width="16.4" Source="Icons/mic.png" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="-10,-5,-10,-5"/>
        </Button>
        <ComboBox Grid.Row="7" Width="354" Height="37.89" Grid.Column="1" Margin="-120,0,27.32,0" HorizontalAlignment="Stretch" VerticalAlignment="Top">Screen and cammera</ComboBox>
        <TextBlock Grid.Row="8" Grid.Column="0" Margin="34.62,39.65,0,0" VerticalAlignment="Top">Internet speed is good</TextBlock>
        <ComboBox Grid.Row="8" Grid.Column="1" Width="97.99" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,39.65,27.32,0" FontWeight="SemiBold" FontSize="13">Auto (720p)</ComboBox>
        <Button Grid.Row="9" Grid.Column="0" Grid.ColumnSpan="2" Width="400" VerticalAlignment="Top" HorizontalAlignment="Stretch" Height="30" Margin="34.62,26.75,27,53.37">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock FontSize="15" Height="18" VerticalAlignment="Center" Margin="0,0,0,5" HorizontalAlignment="Center">Start recording</TextBlock>
                <TextBlock FontWeight="Light" FontSize="12" VerticalAlignment="Center" Margin="13.78,0,0,0" HorizontalAlignment="Center">5 minutes limit</TextBlock>
            </StackPanel>
        </Button>
    </Grid>
</Window>
