<Window x:Class="Recodo.Desktop.Main.Countdown"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        AllowsTransparency="True" WindowStyle="None"
        WindowState = "Maximized"
        Title="DispatcherTimerSample" Height="150" Width="250">
    <Window.Background>
        <SolidColorBrush Opacity="0.5" Color="White"/>
    </Window.Background>
    <Grid>
        <Grid.Effect>
            <DropShadowEffect BlurRadius="7" Direction="-60"
                              RenderingBias="Quality" ShadowDepth="0.5"/>
        </Grid.Effect>
        <Ellipse
            Width="100"
            Height="100"
            Fill="White"/>      
        <Label Name="countdown" FontSize="48"  HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="#B6445D" FontWeight="Bold"/>
    </Grid>
</Window>