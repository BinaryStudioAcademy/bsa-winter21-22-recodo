<Window x:Class="Recodo.Desktop.Main.VideoForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Recodo.Desktop.Main"
        mc:Ignorable="d"
        MouseDown="Window_MouseDown"
        AllowsTransparency ="True"
        WindowStyle = "None"
        ResizeMode="NoResize"
        Title="VideoForm" Height="280" Width="280" Loaded="Window_Loaded">
    <Window.Background>
        <SolidColorBrush Opacity="0" Color="White"/>
    </Window.Background>
    <Grid>
        <Border BorderThickness="0" CornerRadius="180,180,180,180" Background="White">
            <Border x:Name="mBorder" Margin="10" BorderThickness="0" CornerRadius="180,180,180,180" >
                <Border Margin="10" BorderThickness="0" CornerRadius="180,180,180,180" Background="White">
                    <Ellipse Height="220" Width="220" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <Ellipse.Fill>
                            <ImageBrush x:Name="imageBox" Stretch="UniformToFill" />
                        </Ellipse.Fill>
                    </Ellipse>
                </Border>
            </Border>
        </Border>
    </Grid>
</Window>
