                    </Button.Template>
                    <StackPanel Orientation="Horizontal">
                        <Image Margin="15">
                            <Image.Style>
                                <Style TargetType="{x:Type Image}">
                                    <Setter Property="Source" Value="images/edit.png" />
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding ElementName=ButtonEdit, Path=IsFocused}" Value="True">
